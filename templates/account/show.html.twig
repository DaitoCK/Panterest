{% extends 'Layouts/base.html.twig' %}

{% block title 'Profile' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <h1 class="my-5">Profile</h1>

            <img src="{{ app.user.gravatar }}" alt="{{ app.user.fullName }} Avatar" class="rounded-circle shadow">


            <p class="mt-5 lead">{{ app.user.email }}</p>

            <h2>{{ app.user.fullName }}</h2>
            <p><a href="">Editer compte</a> | <a href="">Changer mot de passe</a></p>
        </div>
    </div>
{% endblock %}