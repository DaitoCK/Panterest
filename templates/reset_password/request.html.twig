{% extends 'Layouts/base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mt-5 text-center pb-3">Réinitialisez votre mot de passe</h1>

            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-error mb-3 rounded" role="alert">{{ flashError }}</div>
            {% endfor %}

            <p class="mb-5 text-center text-muted">
                    Entrez votre adresse e-mail et nous vous enverrons un
                    lien pour réinitialiser votre mot de passe.
            </p>

                {{ form_start(requestForm) }}
            <div class="mb-3">
                {{ form_row(requestForm.email) }}
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-primary btn-lg btn-block">
                    Envoyer</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}