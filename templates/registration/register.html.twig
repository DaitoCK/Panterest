{% extends 'layouts/base.html.twig' %}

{% block title 'Sinscrire' %}

{% block body %}
    <div class="div row">
        <div class="col-md-6 mx-auto">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-error rounded-3" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h1 class="my-5 text-center ">Cr√©er un compte</h1>

            {{ form_start(registrationForm) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(registrationForm.firstName) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(registrationForm.lastName) }}
                </div>
            </div>
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-block" formnovalidate>
                    Register
                </button>
            </div>
            {{ form_end(registrationForm) }}
            <p class="text-center  text-muted mt-5 mb-3">
                Already have an account? <a href="{{ path('app_login') }}">Log in</a>
            </p>
        </div>
    </div>
{% endblock %}
